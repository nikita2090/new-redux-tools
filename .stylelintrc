{
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-recommended-scss",
        "stylelint-prettier/recommended"
    ],
    "plugins": [
        "stylelint-scss",
        "stylelint-prettier"
    ],
    "rules": {
        "indentation": 4,
        "prettier/prettier": [
            true,
            {
                "tabWidth": 4,
                "singleQuote": false,
                "endOfLine": "lf"
            }
        ]
    }
}
